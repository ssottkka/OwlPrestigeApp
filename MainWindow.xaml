<Window x:Class="OwlPrestigeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OwlPrestigeApp"
               mc:Ignorable="d"
        Title="Авторизация"
        WindowState="Maximized"
        ResizeMode="CanResizeWithGrip"
        Background="#FF2D2D30">

    <Window.Resources>
        <!-- Стиль для текстовых блоков (подписи) -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFD4D4D4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Стиль для текстовых полей ввода -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="#FFD4D4D4"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Стиль для кнопки -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Основной контейнер для элементов авторизации -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Логин -->
                <RowDefinition Height="Auto"/>
                <!-- Поле логина -->
                <RowDefinition Height="Auto"/>
                <!-- Пароль -->
                <RowDefinition Height="Auto"/>
                <!-- Поле пароля -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопка "Войти" -->
            </Grid.RowDefinitions>

            <!-- Подпись и поле для логина -->
            <TextBlock Grid.Row="0" Text="Логин"/>
            <TextBox Grid.Row="1" x:Name="LoginTextBox"/>

            <!-- Подпись и поле для пароля -->
            <TextBlock Grid.Row="2" Text="Пароль"/>
            <PasswordBox Grid.Row="3" x:Name="PasswordTextBox" Background="#FF3F3F46" Foreground="#FFD4D4D4" BorderBrush="#FF3F3F46" FontSize="14" FontFamily="Segoe UI" Padding="5" Margin="0,0,0,10"/>

            <!-- Кнопка "Войти" -->
            <Button Grid.Row="4" Content="Войти" Width="120" HorizontalAlignment="Center" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>