<Window x:Class="OwlPrestigeApp.PRESTIGE.MenuPrestigeEmploye"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OwlPrestigeApp.PRESTIGE"
        mc:Ignorable="d"
        Title="MenuPrestigeEmploye" 
        WindowState="Maximized"
        ResizeMode="CanResizeWithGrip"
        Background="#FF2D2D30"
        WindowStartupLocation="CenterScreen" >

    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF0099FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF0066CC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Кнопка "Назад" в правом верхнем углу -->
        <Button Content="⬅" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="20" 
                Click="BackButton_Click"
                Width="40" 
                Height="40"
                Style="{StaticResource {x:Type Button}}"
                Background="#FF555555"
                Foreground="White"/>

        <!-- Основные кнопки меню -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Кнопка "Сообщения" -->
            <Button Content="Сообщения" 
                    Width="200" 
                    Height="50"
                    Margin="0,0,0,20"
                    Style="{StaticResource {x:Type Button}}"
                    Click="MessagesButton_Click"/>

            <!-- Кнопка "Выполненные задачи" -->
            <Button Content="Выполненные задачи" 
                    Width="200" 
                    Height="50"
                    Margin="0,0,0,20"
                    Style="{StaticResource {x:Type Button}}"
                    Click="CompletedTasksButton_Click"/>

            <!-- Кнопка "Мои объекты" -->
            <Button Content="Мои объекты" 
                    Width="200" 
                    Height="50"
                    Style="{StaticResource {x:Type Button}}"
                    Click="MyObjectsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>