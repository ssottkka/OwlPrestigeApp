<Window x:Class="OwlPrestigeApp.PRESTIGE.EmployPrestigeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OwlPrestigeApp.PRESTIGE"
        mc:Ignorable="d"
        Title="EmployPrestigeWindow"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Background="#FF2D2D30">

    <Window.Resources>
        <!-- Конвертер для проверки просроченных задач -->
        <local:IsOverdueConverter x:Key="IsOverdueConverter"/>

        <!-- Стиль для выравнивания заголовков столбцов по центру -->
        <Style x:Key="CenterAlignedHeader" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <!-- Стиль для выравнивания текста в ячейках по центру -->
        <Style x:Key="CenterAlignedCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
        </Style>

        <!-- Стиль для DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="#FF2D2D30"/>
            <Setter Property="AlternatingRowBackground" Value="#FF3D3D40"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#FF007ACC"/>
            <Setter Property="VerticalGridLinesBrush" Value="#FF007ACC"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource CenterAlignedHeader}"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Foreground" Value="#FFE0E0E0"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF0099FF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF0099FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF0066CC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF0099FF"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF0099FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Кнопка "Выйти" слева вверху -->
        <Button Content="🚶" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="20" 
                Click="ExitButton_Click"
                Width="40" 
                Height="40"
                Style="{StaticResource {x:Type Button}}"
                Background="LightCoral"
                Foreground="White"/>

        <!-- Кнопка "Меню" справа вверху -->
        <Button Content="☰" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="20" 
                Click="MenuButton_Click"
                Width="40" 
                Height="40"
                Style="{StaticResource {x:Type Button}}"
                Background="#FF555555"
                Foreground="White"/>

        <!-- Верхняя панель с фильтрами и поиском -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,70,10,10">
            <!-- ComboBox для фильтрации по типу объекта -->
            <ComboBox x:Name="TypeFilterComboBox" 
                      Width="200"
                      Margin="5"
                      DisplayMemberPath="НазваниеТипа"
                      SelectedValuePath="IDТипаОбъекта"
                      SelectionChanged="TypeFilterComboBox_SelectionChanged"/>

            <!-- Поле поиска с placeholder -->
            <Grid>
                <TextBox x:Name="SearchTextBox" 
                         Width="200"
                         Margin="5"
                         Padding="5"
                         Style="{StaticResource {x:Type TextBox}}"
                         TextChanged="SearchTextBox_TextChanged"/>
                <TextBlock x:Name="PlaceholderTextBlock"
                           Text="Поиск по задачам..."
                           Margin="10,5,5,5"
                           Foreground="Gray"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Кнопка очистки фильтров -->
            <Button Content="Очистить фильтры"
                    Margin="5"
                    Width="150"
                    Height="40"
                    Style="{StaticResource {x:Type Button}}"
                    Click="ClearFiltersButton_Click"/>
        </StackPanel>

        <!-- DataGrid для отображения задач -->
        <DataGrid x:Name="TasksDataGrid" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  Margin="10,120,10,10"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  Style="{StaticResource {x:Type DataGrid}}">
            <DataGrid.Columns>
                <!-- Номер задачи -->
                <DataGridTextColumn Header="Номер задачи" 
                                    Binding="{Binding IDЗадачи}" 
                                    Width="Auto"
                                    HeaderStyle="{StaticResource CenterAlignedHeader}"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>
                <!-- Название задачи -->
                <DataGridTextColumn Header="Название задачи" 
                                    Binding="{Binding НазваниеЗадачи}" 
                                    Width="*"
                                    HeaderStyle="{StaticResource CenterAlignedHeader}"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>
                <!-- Название объекта -->
                <DataGridTextColumn Header="Название объекта" 
                                    Binding="{Binding НазваниеОбъекта}" 
                                    Width="*"
                                    HeaderStyle="{StaticResource CenterAlignedHeader}"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>
                <!-- Срок выполнения -->
                <DataGridTextColumn Header="Срок выполнения" 
                                    Binding="{Binding СрокВыполнения, StringFormat={}{0:dd.MM.yyyy}}" 
                                    Width="Auto"
                                    HeaderStyle="{StaticResource CenterAlignedHeader}"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>
                <!-- Название компании -->
                <DataGridTextColumn Header="Компания" 
                                    Binding="{Binding Компания}" 
                                    Width="Auto"
                                    HeaderStyle="{StaticResource CenterAlignedHeader}"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>
                <!-- Исполнители -->
                <DataGridTextColumn Header="Исполнители" 
                                    Binding="{Binding Исполнители}" 
                                    Width="*"
                                    HeaderStyle="{StaticResource CenterAlignedHeader}"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>
            </DataGrid.Columns>
            <!-- Стиль для выделения просроченных задач -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <!-- Триггер для просроченных задач -->
                        <DataTrigger Binding="{Binding СрокВыполнения, Converter={StaticResource IsOverdueConverter}}" Value="True">
                            <Setter Property="Background" Value="LightCoral"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</Window>