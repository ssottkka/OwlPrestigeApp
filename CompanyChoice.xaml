<Window x:Class="OwlPrestigeApp.CompanyChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OwlPrestigeApp"
               mc:Ignorable="d"
        Title="CompanyChoice"
        WindowState="Maximized"
        ResizeMode="CanResizeWithGrip"
        Background="#FF2D2D30">

    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Триггер для наведения мыши -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF0099FF"/>
                                <!-- Более светлый цвет фона -->
                                <Setter Property="Foreground" Value="White"/>
                                <!-- Белый текст -->
                            </Trigger>
                            <!-- Триггер для нажатия кнопки -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF0066CC"/>
                                <!-- Темный цвет фона -->
                                <Setter Property="Foreground" Value="White"/>
                                <!-- Белый текст -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Кнопка "Выйти" слева вверху -->
        <Button Content="Выйти" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="20" 
                Click="ExitButton_Click"
                Width="100" 
                Height="40" 
                Background="#FF555555"
                FontWeight="Bold"
                Foreground="#FFE0E0E0"/>

        <!-- Контейнер для кнопок "Сова" и "ПресТиж" -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка "Сова" -->
            <Button Grid.Column="0" 
                    Content="СОВА" 
                    Width="200" 
                    Height="60" 
                    Click="OwlButton_Click"
                    Background="#FF007ACC"
                    FontWeight="Bold"
                    Name="Owl"
                    Foreground="#FFE0E0E0"/>

            <!-- Кнопка "ПресТиж" -->
            <Button Grid.Column="1" 
                    Content="Престиж" 
                    Width="200" 
                    Height="60" 
                    Click="PrestigeButton_Click"
                    Background="#FF007ACC"
                    FontWeight="Bold"
                    Name="Prestige"
                    Foreground="#FFE0E0E0"/>
        </Grid>
    </Grid>
</Window>
